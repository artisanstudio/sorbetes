.landing {
    background:      url(../images/tongue.png) $colors.yellow no-repeat center 140px;
    background-size: 22.222222222rem;
    height:          30.555555556rem;
    position:        relative;

    +above($breakpoints.tablet) {
        background-size: 27.777777778rem;
        height:          36.111111111rem;
    }

    +above($breakpoints.desktop) {
        background-size: 33.333333333rem;
        height:          44.444444444rem;
    }

    +part(image) {
        background:      url(../images/ice-cream.png) no-repeat center center;
        background-size: 160px;
        height:          20rem;
        width:           100%;

        position: absolute;
        bottom:   -5.5rem;
        left:     0;
        z-index:  0;

        +above($breakpoints.tablet) {
            bottom:          -7rem;
            height:          22rem;
            background-size: 11.111111111rem;
        }

        +above($breakpoints.desktop) {
            bottom:          -7rem;
            height:          30rem;
            background-size: 13.888888889rem;
        }
    }
}
